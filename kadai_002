      "source": [
        "import requests\n",
        "from getpass import getpass\n",
        "\n",
        "def main():\n",
        "    # APIキーを安全に入力（画面に表示されない）\n",
        "    api_key = getpass(\"Google Maps APIキーを入力してください: \")\n",
        "\n",
        "    # 駅名を入力（例：新宿駅、東京駅など）\n",
        "    station_name = input(\"駅名を入力してください（例：新宿駅）: \")\n",
        "\n",
        "    # 1. 駅名から緯度・経度を取得（ジオコーディング API）\n",
        "    geocode_url = \"https://maps.googleapis.com/maps/api/geocode/json\"\n",
        "    geocode_params = {\n",
        "        \"address\": station_name,\n",
        "        \"language\": \"ja\",\n",
        "        \"key\": api_key\n",
        "    }\n",
        "\n",
        "    geocode_res = requests.get(geocode_url, params=geocode_params)\n",
        "    geocode_data = geocode_res.json()\n",
        "\n",
        "    if geocode_data.get(\"status\") != \"OK\" or not geocode_data.get(\"results\"):\n",
        "        print(\"位置情報を取得できませんでした。駅名やAPIキーを確認してください。\")\n",
        "        return\n",
        "\n",
        "    location = geocode_data[\"results\"][0][\"geometry\"][\"location\"]\n",
        "    lat = location[\"lat\"]\n",
        "    lng = location[\"lng\"]\n",
        "\n",
        "    print(f\"\\n『{station_name}』の座標：lat={lat}, lng={lng}\")\n",
        "\n",
        "    # 2. 半径500m以内のレストランを検索（Places API Nearby Search）\n",
        "    places_url = \"https://maps.googleapis.com/maps/api/place/nearbysearch/json\"\n",
        "    places_params = {\n",
        "        \"location\": f\"{lat},{lng}\",\n",
        "        \"radius\": 500,             # 500メートル\n",
        "        \"type\": \"restaurant\",      # レストラン\n",
        "        \"language\": \"ja\",          # 日本語で情報取得\n",
        "        \"key\": api_key\n",
        "    }\n",
        "\n",
        "    places_res = requests.get(places_url, params=places_params)\n",
        "    places_data = places_res.json()\n",
        "\n",
        "    if places_data.get(\"status\") != \"OK\" or not places_data.get(\"results\"):\n",
        "        print(\"近くのレストラン情報を取得できませんでした。\")\n",
        "        print(\"APIの利用制限や請求設定、タイプなどを確認してください。\")\n",
        "        return\n",
        "\n",
        "    print(\"\\n★ 半径500m以内のレストラン一覧\")\n",
        "    print(\"-\" * 40)\n",
        "\n",
        "    for place in places_data[\"results\"]:\n",
        "        name = place.get(\"name\", \"名前不明\")\n",
        "        rating = place.get(\"rating\", \"評価なし\")\n",
        "        address = place.get(\"vicinity\", \"住所情報なし\")\n",
        "\n",
        "        print(f\"店名　：{name}\")\n",
        "        print(f\"評価　：{rating}\")\n",
        "        print(f\"住所　：{address}\")\n",
        "        print(\"-\" * 40)\n",
        "\n",
        "\n",
        "if __name__ == \"__main__\":\n",
        "    main()\n"
      ]
    }
  ]
}
